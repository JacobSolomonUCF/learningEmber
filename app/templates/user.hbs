<div class="row aligned-row" style="padding:10px 10px 0px 20px">
  <div class="col-md-6 jumbotron">
    <h2 style="text-align:center;">@{{model.user.username}}</h2>
    <p style="text-align:center;">{{model.user.name}}</p>
  </div>
  <div class="col-md-6" style="height: 247px">
    <div class="well well-sm">
        Current Employer: {{model.user.company.name}}
    </div>
    <div class="well well-sm">
        Email Address: <a href="mailto:{{model.user.email}}">{{model.user.email}}</a>
    </div>
    <div class="well well-sm">
        Phone Number: {{model.user.phone}}
    </div>
    <div class="well well-sm">
        Website: <a href="{{model.user.website}}">{{model.user.website}}</a>
    </div>

  </div>
</div>
<div class="container" style="padding:0px 35px 0px 6px">
  <iframe
    width=100%
    height="250"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCgosHiVoIN_9sSlD6zXl6R4edttt4_LTg
      &q={{model.user.address.geo.lng}},{{model.user.address.geo.lat}}" allowfullscreen>
  </iframe>
</div>
<div class="row aligned-row" style="padding:10px 0px 0px 5px">
  <div class="col-md-4">
    <h3 style="text-align:center">Posts by {{model.user.username}}</h3>
    {{#each model.post as |post|}}
      <div class="panel panel-default" >
        <div class="panel-heading" style="background-color:#dfe3ee">
          <h3 class="panel-title" style="text-align:left"><a style="color:blue">
            {{#link-to "user" post.userId.id}}@{{post.userId.username}}{{/link-to}}</a> - {{post.title}}
          </h3>
        </div>
        <div class="panel-body" style="color:black;text-align:left">
          {{post.body}}
        </div>
      </div>
    {{/each}}
  </div>
  <div class="col-md-4">
    <h3 style="text-align:center">Photos by {{model.user.username}}</h3>
    {{#each model.album as |album|}}
      {{#each model.photo as |photo|}}
        <div class="well well-sm">
        {{photo.title}}
        </div>
        {{/each}}
        {{album.title}}
    {{/each}}
  </div>
  <div class="col-md-4">
    TODO
  </div>
</div>
{{outlet}}
